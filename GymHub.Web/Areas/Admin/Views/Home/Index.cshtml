@{
    ViewData["Title"] = "Home Page";
}

@inject UserManager<ApplicationUser> UserManager;
@{
    var user = await UserManager.GetUserAsync(User);
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, @user.FirstName @user.LastName!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can manage the organization of the work in the gym from here.
        <br />
       @* <br />You can <b>ADD</b> more group activities, <b>CANCEL</b> their schedules*@
    </p>

    <p class="lead mt-1">
        You can see <b>ALL Trainees and Trainers</b> in the
        system.
    </p>
</div>
<br/>
<div class="d-flex justify-content-center">
   <div class="card mx-2" style="width: 18rem;">
    <div class="card-body d-flex flex-column align-items-center">
        <div class="text-center">
            <h5 class="card-title">All Trainers</h5>
            <p class="card-text">Their Data & Responsibilities</p>
        </div>
            <a asp-area="Admin" asp-action="AllTrainers" asp-controller="Home" class="btn btn-primary mt-auto">View Trainers</a>
    </div>
</div>

    <div class="card mx-2" style="width: 18rem;">
        <div class="card-body d-flex flex-column align-items-center">
            <h5 class="card-title">All Trainees</h5>
            <p class="card-text">Their Data</p>
            <a asp-area="Admin" asp-action="AllTrainees" asp-controller="Home" class="btn btn-primary mt-auto">View Trainees</a>
        </div>
    </div>
</div>
 



