@model BookIndividualTrainingViewModel

@{

}

<h5>Book a training</h5>

<form method="post" asp-action="BookIndividualTraining" asp-controller="IndividualTraining">
    <div class="col-12">
        <div class="col-sm-3 mt-3">
            <label asp-for="Start">Day</label>
            <input asp-for="Day" class="form-control" type="date">
        </div>
    </div>
    <div class="col-12">
        <div class="col-sm-3 mt-3">
            <label asp-for="Start">Start time</label>
            <input asp-for="Start" class="form-control" type="time" value="@Model.Start.ToString("HH:mm")" id="timepickerStart">
        </div>
    </div>
    <div class="col-12">
        <div class="col-sm-3 mt-3">
            <label asp-for="End">End time</label>
            <input asp-for="End" id="timepickerEnd" type="time" value="@Model.End.ToString("HH:mm")" class="form-control">
        </div>
    </div>
    <div class="col-12">
        <div class="col-sm-3 mt-3">
            <label for="activityLevel" class="form-label">Intensity</label>
            <select class="form-select" id="intensity" name="Intensity">
                <option selected disabled>Choose Intensity</option>
                <option value="Low">Low</option>
                <option value="Moderate">Moderate</option>
                <option value="High">High</option>
            </select>
        </div>
    </div>

    <div class="col-12">
        <div class="col-sm-3 mt-3">
            <button type="submit" name="trainerId" class="btn btn-primary" value="@Model.TrainerId">Submit</button>
        </div>
    </div>
</form>