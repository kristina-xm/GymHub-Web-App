@model ICollection<AllTrainerViewModel>


<div class="container">
    <h2 class="text-center mt-4">Meet our trainers</h2>
    <h4 class="text-center">If you want to book a training, <br />just click on the <u>Select</u> button for more information</h4>
    <div class="row mt-5 justify-content-center">
        @foreach (var trainer in Model)
        {
            <div class="card text-center" style="width: 50rem;">
                <div class="row g-0">
                    <div class="col-md-4">
                    </div>

                    <div class="card-body">
                        <h3 asp-for="Name" class="card-title p-3">@trainer.FirstName @trainer.LastName</h3>
                        <p class="card-text">@trainer.Bio</p>
                        <div class="col-md-12 d-flex justify-content-center align-items-center">
                            <form method="post">
                                <div class="col-md-12 d-flex justify-content-end align-items-center">
                                    <a class="btn btn-primary" asp-area="" asp-action="TrainerDetails" asp-controller="Trainer" asp-route-id="@trainer.Id">Select</a>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>