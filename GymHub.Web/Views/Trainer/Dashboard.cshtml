@model AccountDashboardViewModel


<div class="container">
    <h3>Welcome to your dashboard!</h3>
    <div class="row">
        <div class="col">
            <h6>Here you can manage your schedule, view your Trainees<br /> and Group Activities you are responsible for. You can also see your future trainings</h6>
        </div>
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                    <h5 class="card-title" style="font-size: 40px;">@Model.UpcomingIndividualTrainings</h5>
                        <p class="card-text">Upcoming <b>Individual</b> trainings</p>
                    <a href="#" class="btn btn-primary">View your Trainees</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                    <h5 class="card-title" style="font-size: 40px;">@Model.CountOfManagedGroupActivities</h5>
                    <p class="card-text">Number of Group activities you are responsible for</p>
                    <a href="#" class="btn btn-primary">Manage</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                    <h5 class="card-title" style="font-size: 40px;">@Model.UpcomingGroupTrainings</h5>
                    <p class="card-text">Upcoming Group activities</p>
                    <a href="#" class="btn btn-primary">View Upcoming</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>