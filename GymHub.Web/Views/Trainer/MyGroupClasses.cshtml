@model ICollection<TrainerGroupScheduleViewModel>
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</head>
<h3 class="mt-5">Upcoming Group classes</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Activity</th>
            <th scope="col">Day</th>
            <th scope="col">Start hour</th>
            <th scope="col">End hour</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ActivityName</td>
                <td>@item.StartTime.ToString("dd/MM/yyyy")</td>
                <td>@item.StartTime.ToString("HH:mm")</td>
                <td>@item.EndTime.ToString("HH:mm")</td>
            </tr>
        }
    </tbody>
</table>