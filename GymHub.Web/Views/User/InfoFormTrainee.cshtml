@model MoreInfoTraineeViewModel

<form method="post" asp-controller="User" asp-action="AddTrainee">
    
    <div class="mb-3">
        <label asp-for="Age">Age</label>
        <input asp-for="Age" min="16" class="form-control">
        <div id="ageHelp" class="form-text">Trainee users should be at least 16 years old.</div>
    </div>
    <div class="form-check">
        <input asp-for="Gender" class="form-check-input" type="radio" name="Gender" id="maleRadio" value="Male" checked>
        <label asp-for="Gender" class="form-check-label" for="exampleRadios1">
            Male
        </label>
    </div>
    <div class="form-check">
        <input asp-for="Gender" class="form-check-input" type="radio" name="Gender" id="femaleRadio" value="Female">
        <label asp-for="Gender"  class="form-check-label" for="exampleRadios2">
            Female
        </label>
    </div>
    <div class="mb-3">
        <label asp-for="Weight">Weight</label>
        <input asp-for="Weight" type="number" step="0.01" class="form-control">
       
    </div> 
    <div class="mb-3">
        <label asp-for="Height">Height</label>
        <input asp-for="Height" type="number" step="0.01" class="form-control">
    </div>
    <div class="mb-3">
        <label for="activityLevel" class="form-label">Activity Level</label>
        <select class="form-select" id="activityLevel" name="Level" aria-label="Activity Level">
            <option selected disabled>Choose Activity Level</option>
            <option value="Beginner">Beginner</option>
            <option value="Intermediate">Intermediate</option>
            <option value="Advanced">Advanced</option>
        </select>
    </div>

    <button type="submit" id="traineeSubmitBtn" class="btn btn-primary">Submit</button>
</form>
