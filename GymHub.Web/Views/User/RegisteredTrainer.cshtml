@model RegisteredTrainerViewModel

@{
    ViewData["Title"] = "Edit Account";
}

<br/>
<h1>You are registered as a Trainer</h1>
<h3>Edit your account information below</h3>
<form method="post" asp-area="" asp-controller="User" asp-action="EditTrainer">
    <div class="row">
    </div>
    <div class="mb-3 col-md-7">
        <label asp-for="@Model.FirstName" class="form-label">First Name</label>
        <input asp-for="@Model.FirstName" class="form-control">
    </div>
   
    <div class="mb-3 col-md-7">
        <label asp-for="@Model.LastName" class="form-label">Last Name</label>
        <input asp-for="@Model.LastName" class="form-control">
    </div>
   
    <div class="mb-3 col-md-7">
        <label asp-for="@Model.PhoneNumber" class="form-label">Phone number</label>
        <input asp-for="@Model.PhoneNumber" class="form-control">
    </div>
  
    <div class="mb-3 col-md-7">
        <label asp-for="@Model.Experience" class="form-label">Professional Experience</label>
        <input asp-for="@Model.Experience" class="form-control">
    </div>
   
    <label asp-for="@Model.Bio" class="form-label">Bio</label>
    <div class="form-floating col-md-7">
        <textarea asp-for="@Model.Bio" class="form-control" placeholder="Write a little bit about yourself!" id="floatingTextarea2"></textarea>
        <label for="floatingTextarea2" class="fst-italic text-muted">Introduce yourself to the trainees...</label>
    </div>
 
    <button type="submit" id="trainerSubmitBtn" class="btn btn-primary">Edit</button>
</form>
